menu "TCP Sample Settings"

config TCP_DATA_UPLOAD_SIZE_BYTES
	int "Number of bytes transmitted to the server"
	default 10

config TCP_DATA_UPLOAD_FREQUENCY_SECONDS
	int "How often data is transmitted to the server"
	default 900

config TCP_SERVER_ADDRESS_STATIC
	string "TCP server IP address"
	default "8.8.8.8"

config TCP_SERVER_PORT
	int "TCP server port number"
	default "2469"

config TCP_PSM_ENABLE
	bool "Enable LTE Power Saving Mode"
	default y

config TCP_EDRX_ENABLE
	bool "Enable LTE enhanced Discontinuous Reception"
	default y

config TCP_RAI_ENABLE
	bool "Enable LTE Release Assistance Indication"
	default y

endmenu

module = TCP
module-str = TCP sample
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu
